{
    "name": "Focused Browsing",
    "version": "1.0.0",
    "description": "Improving the focus of our browsing experience", 
    "background":{
        "scripts": ["js/background.js"],
        "persistent": true
    },
    "content_scripts":[{
        "matches": ["*://*.twitter.com/*",  "*://*.linkedin.com/*"],
        "js": [
            "js/content.js"
        ]
    }],
    "web_accessible_resources" :[
        "www/*",
        "js/*",
        "css/*",
        "<all_urls>"
    ],
    "permissions": [
        "*://*.twitter.com/*", 
        "*://*.linkedin.com/*",
        "storage",
        "tabs",
        "activeTab"
      ],
    "manifest_version": 2
}